<%= form_for(@course) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: " Title", class: "form-contents" %>
    
    <%= f.label :code %>
    <%= f.text_field :code, placeholder: " Course Code", class: "form-contents" %>
    
    <%= f.label :section %>
    <%= f.text_field :section, placeholder: " Section Number", class: "form-contents" %>
    
    <%= f.label :description %>
    <%= f.text_area  :description, placeholder: " What is this course about . . .", class: "form-contents", size: '30x5' %>

    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
    
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
    
    <% if professor?(current_user) %>
      <%= f.label :public %>
      <%= f.check_box :public %>
    <% else %>
      <%= f.check_box :public, value: false, style: "visibility: hidden" %>
    <% end %>
    
    <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>

  </div>
  <%= f.submit "Submit", class: "btn btn-primary submit" %>
<% end %>