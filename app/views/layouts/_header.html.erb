<header class="navbar navbar-fixed-top navbar-inverse" style="background-color: #f48042;">
  <div class="container-fluid">
    
    <%= link_to "Bulletin", root_path, id: "header-logo" %>
    
    <nav>
      <ul class="nav navbar-nav navbar-right">
        
        <li><%= link_to "Home",   root_path,  id: "header-content" %></li>
        <li><%= link_to "Help",   help_path, id: "header-content" %></li>
        
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" id="header-content" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Signup", signup_path, id: "header-content" %></li>
          <li><%= link_to "Log in", login_path,  id: "header-content" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>