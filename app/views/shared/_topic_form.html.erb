<%= form_for(@topic) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: " Title", class: "form-contents" %>
    
    <%= f.label :description %>
    <%= f.text_area  :description, placeholder: " What is this topic regarding . . .", class: "form-contents", size: '30x5' %>

    <%= f.label :relevant_date, "Relevant Date (Optional)" %>
    <%= f.datetime_field :relevant_date %>
    
    <%= f.label :release_date, "Accouncement Release Date (Optional)" %>
    <%= f.datetime_field :release_date %>
    
    <%= f.fields_for :topic_attachments do |a| %>
      <%= a.label :attachment %>
      <%= a.file_field :attachment %>
    <% end %>
    
    <%= f.text_field :course_id, value: @course.id, type: "hidden" %>

  </div>
  <%= f.submit "Submit", class: "btn btn-primary submit" %>
<% end %>