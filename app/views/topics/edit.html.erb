<h3>Edit Assignment</h3>
<%= form_for(@topic) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: " Title", class: "form-contents" %>
    
    <%= f.label :description %>
    <%= f.text_area  :description, placeholder: " What is this topic in regards to . . .", class: "form-contents", size: '30x5' %>

    <%= f.label :relevant_date %>
    <%= f.date_field :relevant_date %>
    
    <%= f.label :release_date %>
    <%= f.date_field :release_date %>
    
    <%= render 'shared/topic_attachment_form', :f => f %>
    
    <%= f.text_field :course_id, value: @course.id, type: "hidden" %>

  </div>
  <%= f.submit "Submit", class: "btn btn-primary submit" %>
<% end %>
<%= link_to "delete", @topic, method: :delete, data: { confirm: "You sure?" } %>