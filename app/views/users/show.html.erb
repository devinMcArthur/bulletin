<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <%= link_to "Add Course", courses_path, class: "btn btn-lg btn-primary" %>
  <p><b>Permission:</b> <% if @user.professor == true %> Professor<% else %> Student<% end %></p>
</div>